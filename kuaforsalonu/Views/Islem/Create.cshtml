@model kuaforsalonu.Models.Islem

@{
    ViewData["Title"] = "Yeni İşlem Ekle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Ad" class="control-label"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SureDakika" class="control-label"></label>
        <input asp-for="SureDakika" class="form-control" />
        <span asp-validation-for="SureDakika" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ucret" class="control-label"></label>
        <input asp-for="Ucret" class="form-control" />
        <span asp-validation-for="Ucret" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SalonId" class="control-label"></label>
        <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId"></select>
        <span asp-validation-for="SalonId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Ekle</button>
    </div>
</form>

<a href="@Url.Action("Index", "Islem")">Geri Dön</a>
