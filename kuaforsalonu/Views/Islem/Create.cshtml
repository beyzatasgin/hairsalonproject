@model kuaforsalonu.Models.Islem
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<form class=" " form-group" method="post">
    <b>Salon Adı</b>
    @Html.TextBoxFor(x => x.IslemId, new { @class = "form-control" })
    <br />
    <b>Adres</b>
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    <b>Telefon Numarası</b>
    @Html.TextBoxFor(x => x.SureDakika, new { @class = "form-control" })
    <br />
    <b>Çalışma Saatleri</b>
    @Html.TextBoxFor(x => x.Ucret, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">İşlem Ekle</button>
</form>
