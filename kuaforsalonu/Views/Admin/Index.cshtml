@{
    ViewData["Title"] = "Admin Paneli";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Admin Paneli</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<!-- Salonalar Paneli -->
<div class="row">
    <!-- Salonlarım Paneli -->
    <div class="col-lg-3 col-md-6">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">
                <div class="row">
                    <div class="col-3">
                        <i class="fa fa-comments fa-5x"></i>
                    </div>
                    <div class="col-9 text-right">
                        <div>Salonlar</div>
                    </div>
                </div>
            </div>
            <a class="card-footer text-white clearfix small z-1" asp-controller="Salon" asp-action="Index">
                <span class="float-left">İncele</span>
                <span class="float-right"><i class="fa fa-arrow-circle-right"></i></span>
            </a>
        </div>
        </di
        <div class="row">
            <!-- Çalışanlarım Paneli -->
            <div class="col-lg-3 col-md-6">
                <div class="card text-white bg-primary mb-3">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-3">
                                <i class="fa fa-comments fa-5x"></i>
                            </div>
                            <div class="col-9 text-right">
                                <div>Çalışanlarım</div>
                            </div>
                        </div>
                    </div>
                    <a class="card-footer text-white clearfix small z-1" asp-controller="AdminCalisan" asp-action="Index">
                        <span class="float-left">İncele</span>
                        <span class="float-right"><i class="fa fa-arrow-circle-right"></i></span>
                    </a>
                </div>
            </div>

            <!-- Müşteriler Paneli -->
            <div class="col-lg-3 col-md-6">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-3">
                                <i class="fa fa-tasks fa-5x"></i>
                            </div>
                            <div class="col-9 text-right">
                                <div>Müşteriler</div>
                            </div>
                        </div>
                    </div>
                    <a class="card-footer text-white clearfix small z-1" asp-controller="AdminMusteri" asp-action="Index">
                        <span class="float-left">İncele</span>
                        <span class="float-right"><i class="fa fa-arrow-circle-right"></i></span>
                    </a>
                </div>
            </div>

            <!-- Randevular Paneli -->
            <div class="col-lg-3 col-md-6">
                <div class="card text-white bg-warning mb-3">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-3">
                                <i class="fa fa-shopping-cart fa-5x"></i>
                            </div>
                            <div class="col-9 text-right">
                                <div>Randevular</div>
                            </div>
                        </div>
                    </div>
                    <a class="card-footer text-white clearfix small z-1" asp-controller="UyeRandevu" asp-action="Index">
                        <span class="float-left">İncele</span>
                        <span class="float-right"><i class="fa fa-arrow-circle-right"></i></span>
                    </a>
                </div>
            </div>
        </div>
        <!-- /.row -->
