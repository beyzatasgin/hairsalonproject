@model IEnumerable<kuaforsalonu.Models.Randevu>

@{
    ViewBag.Title = "Index";
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    @Html.ActionLink("Yeni Randevu Oluştur", "Create", new { @class = "btn btn-primary" })
</p>

<table class="table">
    <thead>
        <tr>
            <th>Çalışan</th>
            <th>Müşteri Adı</th>
            <th>Müşteri Soyadı</th>
            <th>Saat</th>
            <th>Tarih</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Calisan.Adi)</td>
                <td>@Html.DisplayFor(modelItem => item.Musteri.Adi)</td>
                <td>@Html.DisplayFor(modelItem => item.Musteri.Soyadi)</td>
                <td>@Html.DisplayFor(modelItem => item.Saat.Adi)</td>
                <td>@Html.DisplayFor(modelItem => item.Tarih)</td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.RandevuID }) |
                    @Html.ActionLink("Detaylar", "Details", new { id = item.RandevuID }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.RandevuID })
                </td>
            </tr>
        }
    </tbody>
</table>
