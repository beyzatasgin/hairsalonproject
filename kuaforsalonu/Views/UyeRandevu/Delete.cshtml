@model kuaforsalonu.Models.Randevu

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="header-area dark animated">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <!--Header Logo-->
                <div class="header-logo float-left">
                    <a class="logo" href="#"><img src="~/Content/img/section-bg/logo6.png" alt="Logo"></a>
                </div>
                <!--Main Menu-->
                <div class="main-menu float-right">
                    <nav>
                        <ul>
                            <li><a href="/Home/Index"><p style="color:red">Anasayfa</p></a></li>
                        </ul>
                    </nav>
                </div>
                <!--Mobile Menu-->
                <div class="mobile-menu"></div>
            </div>
        </div>
    </div>
</div>

<div class="portfolio-area section bg-dark pt-120 col-md-8">
    <h2>Randevu Sil</h2>

    <h3>Bu randevuyu silmek istiyor musunuz?</h3>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>Çalışan Adı</dt>
            <dd>@Html.DisplayFor(model => model.Calisan.Adi)</dd>

            <dt>Müşteri Adı</dt>
            <dd>@Html.DisplayFor(model => model.Musteri.Adi)</dd>

            <dt>Müşteri Soyadı</dt>
            <dd>@Html.DisplayFor(model => model.Musteri.Soyadi)</dd>

            <dt>Saat</dt>
            <dd>@Html.DisplayFor(model => model.Saat.Adi)</dd>

            <dt>Tarih</dt>
            <dd>@Html.DisplayFor(model => model.Tarih)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-danger" /> |
                @Html.ActionLink("Randevulara Geri Dön", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>
