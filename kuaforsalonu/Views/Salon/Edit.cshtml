@model kuaforsalonu.Models.Salon

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@using (Html.BeginForm("Edit", "Salon", FormMethod.Post))
{
    <b>ID</b>
    @Html.TextBoxFor(x => x.SalonId, new { @class = "form-control" })
    <br />
    <b>Salon Adı</b>
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />
    <b>Adres</b>
    @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
    <br />
    <b>Telefon Numarası</b>
    @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
    <br />
    <b>Çalışma Saatleri</b>
    @Html.TextBoxFor(x => x.CalismaSaatleri, new { @class = "form-control" })
    <br />
    <button class="btn btn-default" style="background-color:green;
    color:white">
        Salon Güncelle
    </button>
}